<Page x:Class="ChessUI.BoardPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessUI"
        mc:Ignorable="d"
        Title="BoardPage" Height="450" Width="800"
        Background="#380404">
    <!--x:Name="WindowForMeasure"-->
    <Viewbox>
        <!--MouseDown="BoardGrid_MouseDown"-->
        <Grid 
              x:Name="BoardGrid">


            <UniformGrid x:Name="PieceGrid"
                         Rows="8"
                         Columns="8"
                         MinHeight="1000"
                         MinWidth="1000">

                <UniformGrid.Background>
                    <ImageBrush ImageSource="Assets/board.png"/>
                </UniformGrid.Background>
            </UniformGrid>
            <ContentControl x:Name="MenuContainer"/>
            <ContentControl x:Name="TimerContainer" />
        </Grid>

    </Viewbox>

</Page>
